{
    "info": {
        "_postman_id": "d7e9f3b1-f0a1-4c2d-8b8a-1a2b3c4d5e6f",
        "name": "MegaAgent Pro API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "_exporter_id": "1234567"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Get Auth Token",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 200\", function () { pm.response.to.have.status(200); });",
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.access_token) {",
                                    "    pm.environment.set(\"authToken\", jsonData.access_token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"Str0ngP@ssw0rd!\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/token",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "token"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Agents",
            "item": [
                {
                    "name": "List Agents",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/agents",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "agents"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Invoke Agent",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"command\": \"ask\",\n    \"payload\": {
        \"question\": \"What is the capital of France?\"\n    }
}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/agents/{{agentId}}/invoke",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "agents",
                                "{{agentId}}",
                                "invoke"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{authToken}}",
                "type": "string"
            }
        ]
    },
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "https://api.megaagent.pro/v1"
        },
        {
            "key": "agentId",
            "value": "your-agent-id"
        }
    ]
}