# MEGA Agent Pro Environment Configuration
# Copy this file to .env and customize for your environment

# =================================
# Application Settings
# =================================
DEBUG=false
ENV=production

# =================================
# Security Configuration
# =================================
# JWT Configuration
JWT_SECRET_KEY=your-secret-jwt-key-change-this-in-production
SECURITY_JWT_ALGORITHM=HS256
SECURITY_JWT_EXPIRATION_HOURS=24

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com
SECURITY_CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
SECURITY_RATE_LIMIT_ENABLED=true
SECURITY_RATE_LIMIT_REQUESTS_PER_MINUTE=100
SECURITY_RATE_LIMIT_BURST=20

# Security Headers
SECURITY_SECURITY_HEADERS_ENABLED=true
SECURITY_HSTS_MAX_AGE=31536000

# Development Settings (disable in production)
DEV_BYPASS_AUTH=false

# =================================
# Database Configuration
# =================================
DATABASE_URL=sqlite:///./data/mega_agent.db
# For PostgreSQL: postgresql://user:password@localhost/mega_agent
# For MySQL: mysql://user:password@localhost/mega_agent

# =================================
# Memory & Storage
# =================================
MEMORY_BACKEND=sqlite
VECTOR_STORE_TYPE=faiss
VECTOR_DIMENSION=1536

# =================================
# AI/LLM Configuration
# =================================
# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Google Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key

# =================================
# Monitoring & Observability
# =================================
# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Tracing
TRACING_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# =================================
# External Services
# =================================
# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Webhook endpoints
WEBHOOK_SECRET=your-webhook-secret
NOTIFICATION_WEBHOOK_URL=https://your-app.com/webhooks/notifications

# =================================
# File Storage
# =================================
STORAGE_BACKEND=local
STORAGE_PATH=./data/storage
# For S3: s3://your-bucket/path
# For Azure: azure://your-container/path

# =================================
# Legal & Compliance
# =================================
AUDIT_RETENTION_DAYS=2555  # 7 years for legal compliance
DATA_ENCRYPTION_ENABLED=true
GDPR_COMPLIANCE_MODE=true

# =================================
# Performance Tuning
# =================================
MAX_WORKERS=4
MEMORY_LIMIT_MB=1024
CACHE_TTL_SECONDS=3600
BATCH_SIZE=100

# =================================
# Feature Flags
# =================================
FEATURE_RAG_ENABLED=true
FEATURE_WORKFLOW_ENABLED=true
FEATURE_CASE_AGENT_ENABLED=true
FEATURE_WRITER_AGENT_ENABLED=true
FEATURE_VALIDATOR_AGENT_ENABLED=false
FEATURE_SELF_CORRECTION_ENABLED=false