# Runtime configuration for mega_agent_pro

# LLM providers
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=

# Router configuration
LLM_DEFAULT_PROVIDER=openai
LLM_PROVIDER_PRIORITY=["openai","anthropic","gemini"]
LLM_MAX_RETRIES=3
LLM_BACKOFF_INITIAL=0.3
LLM_BACKOFF_MULTIPLIER=2.0
LLM_BACKOFF_JITTER=0.2
LLM_REQUEST_TIMEOUT=30

# Optional per-provider budgets (JSON)
# Example: {"openai": {"max_tokens": 100000, "max_cost_usd": 25.0}}
LLM_PROVIDER_BUDGETS=

# Telemetry
PROMETHEUS_NAMESPACE=mega_agent_pro

# Security (JWT)
# NOTE: Used by auth_utils if you wire Settings->JWTConfig
JWT_SECRET=
JWT_ISSUER=mega_agent_pro
JWT_ALGORITHM=HS256
JWT_ACCESS_EXP_MINUTES=30
JWT_REFRESH_EXP_DAYS=7

