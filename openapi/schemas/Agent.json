{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent",
  "description": "A representation of an AI agent.",
  "type": "object",
  "properties": {
    "agentId": {
      "type": "string",
      "format": "uuid",
      "description": "The unique identifier for the agent."
    },
    "name": {
      "type": "string",
      "description": "The name of the agent."
    },
    "description": {
      "type": "string",
      "description": "A description of the agent's capabilities."
    },
    "type": {
      "type": "string",
      "description": "The type of the agent (e.g., 'supervisor', 'case_agent')."
    }
  },
  "required": ["agentId", "name", "type"]
}