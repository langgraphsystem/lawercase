{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Error",
  "description": "A standard error response.",
  "type": "object",
  "properties": {
    "code": {
      "type": "string",
      "description": "An error code."
    },
    "message": {
      "type": "string",
      "description": "A human-readable error message."
    }
  },
  "required": ["code", "message"]
}